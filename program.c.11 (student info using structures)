#include<stdio.h>
void year1();
void rol();
int main()
{
struct sdata
  {
     int roll;
     char n[30];
     char d[10];
	int year;
  }
struct studentx[200]; 
  int n,i,year,roll;
  printf("enter no. of students\n");
  scanf("%d",&n);
   for(i=0;i<n;i++)
   {
    printf("enter the details of student%d\n",i++);
	scanf("%d",&x[i].roll);
	scanf("%s",&x[i].n);
	scanf("%s",&x[i].d);
	scanf("%d",&x[i].year);
    }
printf("enter year:\n");
scanf("%d",&year);
year1(year,n);
printf("enter the student roll no. :\n ");
scanf("%d",&roll);
rol(roll,n);
return 0;
}
     
   void year1(int x,int n)
	{
	 int i,count=0;
	 printf("names of the students admitted in the year %d\n",x);
	 for(i=0;i<n;i++)
	  {
	   if(x[i].year==x)
	    {
		printf("%s\n",x[i].n);
		count++;
	    }
	  }
	if(count==0)
	printf("no students are admitted in %d\n",x);
  }	

	void rol(int r,int n)
	{
	 int i,count=0;
	 for(i=0;i<n;i++)
	  {
	   if(r==x[i].roll);
		{
		 printf("roll number :%d\n",x[i].roll);
		 printf("name:%s\n",x[i].n);
		 printf("department :%s\n",x[i].d);
		 printf("year of joining:%d",x[i].year);
		 count++;
		}
	}
		if(count==0)
		printf("enter valid roll number\n");
	};
