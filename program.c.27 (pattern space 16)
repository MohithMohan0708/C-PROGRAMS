#include<stdio.h>
int main()
{
 int rows,cols,spaces,n;
  for(rows=1;rows<=n;rows++)
  {
   for(spaces=1;spaces<=n-rows;spaces++)
   {
    printf(" ");
    }
  for(cols=1;cols<=rows;cols++)
  {
   printf("%d",rows);
   }
printf("\n");
}
for(rows=1;rows<=n-1;rows++)
{
for(spaces=1;spaces<=rows;spaces++)
{
printf(" ");
}
for(cols=1;cols<=n-rows;cols++)
{
printf("%d",n-rows);
}
printf("\n");
}
return 0;
}
